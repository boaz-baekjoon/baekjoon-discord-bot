{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "preserveValueImports": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],

}
